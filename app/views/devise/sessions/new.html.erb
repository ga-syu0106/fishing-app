<%= render 'shared/second_header'%>

<%= form_with model:@user, url: user_session_path, class:'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>ログイン</h1>

  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>

  <div class = "form-session">
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス
        <span class="indispensable">必須</span>
      </label>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"", autofocus: true %>
  </div>

  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード
        <span class="indispensable">必須</span>
      </label>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"", autofocus: true %>
  </div>

  <div class='register-btn'>
    <%= f.submit "ログイン" ,class:"register-red-btn" %>
  </div>

  </div>
  </div>
</div>
<% end %>

<%= render "/shared/footer" %>
